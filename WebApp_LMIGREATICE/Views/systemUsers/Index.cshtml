@model IEnumerable<WebApp_LMIGREATICE.Models.systemUser>
@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">List of users</h2>
<p>
    @Html.ActionLink("Add user", "Create", "systemUsers", new { @class = "btn btn-default wine-button" })
</p>
<table class="table">
    <thead class="head-table">
        <tr>
            <th>@Html.DisplayName("Name")</th>
            <th>@Html.DisplayNameFor(model => model.email)</th>
            <th>@Html.DisplayNameFor(model => model.country.nameCountry)</th>
            <th>@Html.DisplayNameFor(model => model.institution.nameInstitution)</th>
            <th>@Html.DisplayNameFor(model => model.idUserPrivilege)</th>
            <th>@Html.DisplayNameFor(model => model.idUserState)</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (var systemUser in Model)
        {
            <tr>
                <td>@Html.ActionLink(systemUser.firstName + " " + systemUser.lastName, "Edit", new { id = systemUser.idSystemUser }, new { @class = "a-wine" })</td>
                <td>@Html.DisplayFor(x => systemUser.email)</td>
                <td>@Html.DisplayFor(x => systemUser.country.nameCountry)</td>
                <td>@Html.DisplayFor(x => systemUser.institution.nameInstitution)</td>
                <td>@Html.DisplayFor(x => systemUser.userPrivilege.namePrivilege)</td>
                <td>@Html.DisplayFor(x => systemUser.userState.nameState)</td>
                <td>
                    <a href="@Url.Action("Delete", "systemUsers",new { id = systemUser.idSystemUser})" onclick="return confirm('Are you sure you want to delete this?');"><img src="@Url.Content("~/Content/images/trash.png")" style="width:20px;height:auto;"></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}