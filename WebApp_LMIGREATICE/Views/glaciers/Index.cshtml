@model IEnumerable<WebApp_LMIGREATICE.Models.glacier>
@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">List of glaciers</h2>
<p>
    @Html.ActionLink("Add glacier", "Create", "glaciers", new { @class = "btn btn-defualt wine-button" })
</p>

<table class="table">
    <thead class="head-table">
        <tr>
            @*<th>@Html.DisplayNameFor(model => model.idGlacier)</th>*@
            <th>@Html.DisplayNameFor(model => model.nameGlacier)</th>
            <th>@Html.DisplayNameFor(model => model.idMountain)</th>
            <th>@Html.DisplayNameFor(model => model.stateR)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>@Html.DisplayFor(modelItem => item.idGlacier)</td>*@
                <td>@Html.ActionLink(item.nameGlacier,"Edit", new { id = item.idGlacier },new { @class= "a-wine"})</td>
                <td>@Html.DisplayFor(modelItem => item.mountain.nameMountain)</td>
                <td>@Html.DisplayFor(modelItem => item.stateR)</td>
                <td>
                    <a href="@Url.Action("Delete", "glaciers",new { id = item.idGlacier})" onclick="return confirm('Are you sure you want to delete this?');"><img src="@Url.Content("~/Content/images/trash.png")" style="width:20px;height:auto;"></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}